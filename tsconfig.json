{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ESNext", "ESNext.Disposable"],
    "rootDir": "./src",
    "paths":{
      "~/src/*": ["./src/*"],
    },
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/tests/**/*"
  ],
  "include": [
    "src/**/*",
    "jest.config.js"
   ]
}