{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ESNext", "ESNext.Disposable"],
    "rootDir": "./src",
    "paths":{
      "~/assets/*": ["./src/assets/*"],
      "~/utils/*": ["./src/utils/*"],
      "~/constants/*": ["./src/constants/*"],
      "~/enums/*": ["./src/enums/*"],
      "~/commands/*": ["./src/commands/*"],
      "~/types/*": ["./src/@types/*"],
      "~/managers/*": ["./src/managers/*"],
      "~/configs/*": ["./src/configs/*"],
      "~/database/*": ["./src/database/*"],
      "~/logger/*": ["./src/logger/*"],
    },
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "jest.config.js"
  ]
}